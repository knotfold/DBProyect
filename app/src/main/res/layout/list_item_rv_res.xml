<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/cardview_compat_inset_shadow">
        <LinearLayout

            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:paddingBottom="10dp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linearLayout"
            >
            <TextView
                android:id="@+id/textViewIdRestaurante"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Heading"
                android:textSize="1sp"
                android:textColor="#ffffff"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
            <TextView
                android:id="@+id/textViewNombreRes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:text="Desc"/>
            <TextView
                android:id="@+id/textViewUbicacionRes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Heading"
                />
            <TextView
                android:id="@+id/textViewHorarioRes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Desc"/>
            <TextView
                android:id="@+id/textViewAforoRes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Heading"
                />
            <TextView
                android:id="@+id/textViewTipoRes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Desc"/>
            <TextView
                android:id="@+id/textViewContactoRes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Heading"
                android:paddingBottom="5dp"
                />
            <ImageView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:id="@+id/imageView"
                />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>