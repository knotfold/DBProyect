<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cool2bgoodgav.warcr.dbproyect.Login_screen">

    <ImageView
        android:id="@+id/LoginBack"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@android:string/unknownName"
        android:scaleType="centerCrop"
        android:src="@drawable/backgro_normal_ff" />


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="100dp"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:background="@drawable/trans_white_rectangle"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/Logo"
                android:layout_width="75dp"
                android:layout_height="75dp"

                android:background="@drawable/mini_ff_logo"
               android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="13dp"
                android:contentDescription="@android:string/unknownName"
                android:scaleType="fitCenter"
                />

            <EditText
                android:id="@+id/autoTextUser"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_dark"
                android:drawableLeft="@drawable/icon_shorcut_user"
                android:dropDownWidth="5dp"
                android:textColorHint="@color/WhiteColor"
                android:hint="@string/usuario"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:textSize="18sp"
                android:textColor="#FFFFFF" android:drawableStart="@drawable/icon_shorcut_user" />

            <EditText
                android:id="@+id/autoTextPass"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="15dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/rounded_dark"
                android:drawableLeft="@drawable/icon_shorcut_pass"
                android:dropDownWidth="5dp"
                android:hint="@string/contrasena"
                android:inputType="textPassword"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:textColorHint="@color/WhiteColor"
                android:textSize="17sp"
                android:textColor="#FFFFFF" android:drawableStart="@drawable/icon_shorcut_pass" />


            <Button
                android:id="@+id/buttonLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="75dp"
                android:layout_marginStart="75dp"
                android:background="@drawable/round_red_button_og_color"
                android:text="@string/login"
                android:onClick="Login"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:paddingTop="25dp"
                android:text="La aplicación mas usada por los restaurantes,¿No tienes una cuenta?, Registrate"
                android:textColor="#000000"
                android:textSize="12sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonRegister"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="125dp"
                android:layout_marginStart="125dp"
                android:background="#01FFFFFF"
                android:text="Aqui"
                android:textColor="@color/TrueColor"
                android:textSize="12sp"
                android:onClick="Register"/>


        </LinearLayout>


    </ScrollView>

</RelativeLayout>
