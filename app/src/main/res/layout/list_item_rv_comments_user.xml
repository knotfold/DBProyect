<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/cardview_compat_inset_shadow">
        <LinearLayout

            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:paddingBottom="10dp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linearLayoutCommentUser"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewIdComentario"
                android:textColor="#FFFFFF"
                android:textSize="1sp"/>
            <EditText
                android:id="@+id/EditTextComntarioRes"
                android:textColor="@drawable/edit_text_selector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:background="@null"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:text="Desc"/>
            <TextView
                android:id="@+id/textViewNombreCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Heading"
                android:textSize="16sp"
                android:textStyle="italic"
                android:layout_marginLeft="120dp"
                android:paddingBottom="5dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingBottom="5dp">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:id="@+id/buttonEdit"
                    android:layout_marginLeft="90dp"
                    android:text="Editar"
                    android:textSize="12sp"
                    android:onClick="editComment"
                    android:textColor="@color/TrueColor"
                    android:background="#FBFBFB"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:textSize="12sp"
                    android:id="@+id/buttonDelete"
                    android:text="Eliminar"
                    android:textColor="@color/TrueColor"
                    android:background="#FBFBFB"
                    android:onClick="deleteComment"
                    android:layout_marginLeft="5dp"/>

            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>